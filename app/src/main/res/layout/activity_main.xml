<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="true">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Search"
        android:textColorHint="#ff3333"
        android:layout_alignParentTop="true"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:textColor="#ff3333"
        android:inputType="text"
        android:maxLines="1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tableLayout"
        android:divider="#ffffff"
        android:dividerPadding="2dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:divider="#ffffff"
            android:baselineAligned="false"
            android:showDividers="beginning|middle|end"
            android:dividerPadding="2dp"
            android:paddingBottom="4dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Advanced Search"
                android:id="@+id/advancedSearchButton"
                android:layout_column="0"
                android:background="#ff3333"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:text="SHOP BY CATEGORY"
                android:id="@+id/shopByCategoryIdButton"
                android:layout_column="1"
                android:background="#ff3333"
                android:layout_marginLeft="2dp"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:text="VIEW MAP"
                android:id="@+id/viewMapButton"
                android:layout_column="0"
                android:background="#ff3333"
                android:layout_marginRight="2dp"
                android:gravity="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:text="Shopping List"
                android:id="@+id/shoppingListButton"
                android:layout_column="1"
                android:background="#ff3333"
                android:layout_marginLeft="2dp"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW ALL BRANDS"
                android:id="@+id/allBrandsButton"
                android:onClick="@string/title_activity_brand_list"
                android:nestedScrollingEnabled="false"
                android:layout_above="@+id/allStoresButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_column="0"
                android:layout_span="2"
                android:layout_marginTop="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW ALL STORES"
                android:id="@+id/allStoresButton"
                android:textColor="#000000"
                android:onClick="@string/title_activity_store_list"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_column="0"
                android:layout_span="2"
                android:layout_marginTop="5dp" />
        </TableRow>
    </TableLayout>


</RelativeLayout>

